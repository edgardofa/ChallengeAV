<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WA_Challenge</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript">
        $(document).ready(function () {
            $('#boton-guardar').click(function () {
            });
        });
        function GuardarLS() {
            /*Captura de datos escrito en los inputs*/
            var uss = document.getElementById("emailInput").value;
            var pass = document.getElementById("passwordInput").value;
            /*Guardando los datos en el LocalStorage*/
            localStorage.setItem("USUARIO", uss);
            localStorage.setItem("PASSWORD", pass);
            /*Limpiando los campos o inputs*/
            document.getElementById("emailInput").value = "";
            document.getElementById("passwordInput").value = "";
        //    MostrarLS();
        };
        /*Funcion Cargar y Mostrar datos*/
        function MostrarLS() {
            /*Obtener datos almacenados*/
            var nombre = localStorage.getItem("USUARIO");
            /*Mostrar datos almacenados*/
            document.getElementById("usLogueado").innerHTML = nombre;
        };
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top" role="navigation" style="background-color: #FF6A4A;">
            <div class="container">
                <a class="navbar-brand" href="#">AMERICA VIRTUAL</a>

                <div class="card-text d-lg-none" id="bienvenido">Bienvenido</div>
                <div class="card-text d-lg-none p-xl-1" id="usLogueado"></div>

                <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                    &#9776;
                </button>

                <div class="collapse navbar-collapse" id="exCollapsingNavbar">
                    <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                        <li class="dropdown order-1">
                            <button type="button" id="dropdownMenu1" data-toggle="dropdown" class="btn btn-outline-light">INICIAR SESION <i class="fas fa-user-alt"></i></button>
                            <ul class="dropdown-menu dropdown-menu-right mt-2">
                                <li class="px-3 py-2">
                                    <form class="form" role="form">
                                        <div class="form-group row align-content-lg-center">
                                            <label class="font-12 font-bold">Usuario</label>
                                        </div>
                                        <div class="form-group">
                                            <input id="emailInput" placeholder="americavirtual@gmail.com" class="form-control form-control-sm" type="text" required="">
                                        </div>
                                        <div class="form-group row align-content-lg-center">
                                            <label class="font-12 font-bold">Contraseña</label>
                                        </div>
                                        <div class="form-group">
                                            <input id="passwordInput" placeholder="Contraseña" class="form-control form-control-sm" type="text" required="">
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block" onclick="GuardarLS()">Iniciar sesión</button>
                                        </div>
                                        @*<div class="form-group text-center">
                                    <small><a href="#" data-toggle="modal" data-target="#modalPassword">Forgot password?</a></small>
                                </div>*@
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            <div class="row bg-dark">
                <div class="col-lg-6">
                    <h6 class="h6 text-lg-left p-2 bg-dark text-white">&copy;Copyrigth 2021 - WA_Challenge - </h6>
                </div>
                <div class="col-lg-6">
                    <h6 class="h6 text-lg-right p-2 bg-dark text-white">Challenge AV </h6>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
